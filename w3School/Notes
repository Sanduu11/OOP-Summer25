#Variables
x = 1234 # int， （Numeric Types， 整数）
y =("Sandugash Nurbolat") # str, (Text Type, 文字）
print(x)
print(y)

#也可以只运行一个
x = 1234 # int， （Numeric Types， 整数）
y =("Sandugash Nurbolat") # str, (Text Type, 文字）
print(x)

#str 也可以当作文本 不需要"" 
x = str(3)
y = int(3)
z = float(3) #运行出来是小数点 3.0

print(x)
print(y)
print(z)

# Variables 
myvar = "John"
my_var = "John"
_my_var = "John"
myVar = "John"
MYVAR = "John"
myvar2 = "John"

#Camel case
myVariableName = "Sandu"
#Pascal case
MyVariableName = "Sandu"
#Snack case
my_variable_name = "Sandu"

#Global Variable
x = "awesome"

def myfunc():
  print("Python is " + x)

myfunc()

#Create a variable inside a function, with the same name as the global variable
x = "awesome"

def myfunc():
  x = "fantastic"
  print("Python is " + x)

myfunc()

print("Python is " + x)









