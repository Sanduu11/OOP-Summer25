# create a list of countries
countries = ['Poland', 'Turkey', 'Germany', 'Uganda', 'Zimbabwe']

# display each country in a separate line use for loop
for c in countries:
    print(c)  

# use if statement to display that is my country for your country
country = 'Poland'

if country == 'Poland':
    print('That is my country')

# use if statement inside the loop for countries
for c in countries:
    print(c)
    if c == 'Poland':
        print('That is my country')

# create a dictionary for student having the name and index number
student1 = {
    'name': 'Adilet',
    'index_number': '1431423'    
}

# please access the name from that dictionary
print("My name is", student1['name'])

# create a class for a student
class Student:
    def __init__(self, name, index_number):
        self.name = name
        self.index_number = index_number

# create 3 objects of that class
student1 = Student('Adilet', '1414444')
student2 = Student('Ada', '543534')
student3 = Student('Adil', '342342')

# please print student name and index number
print(student1.name, student1.index_number)
print(student2.name, student2.index_number)
print(student3.name, student3.index_number)

